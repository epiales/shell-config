[user]
	name = Logan Brown
	email = logan.brown1223@gmail.com
	github = epiales
[color]
	ui = true
[alias]
	amend = commit --amend
	backup = "!git checkout -b backup-$(date +\"%Y-%m-%d_%H-%M-%S\")-$(git symbolic-ref --short HEAD); git checkout -; git lg -4"
	br = branch
	cas = commit --amend -S
	can = commit --amend --no-edit
	cans = commit --amend --no-edit -S
	ck = checkout
	ckb = checkout -b
	cm = commit
	cmm = commit -m
	cms = commit -S
	cmms = commit -S -m
	contains = branch -r --contains
	date = "!git commit -S --amend --no-edit --date=\"$(date)\""
	ds = diff --staged -C
	fa = fetch --all
	fu = fetch upstream
	l = !git --no-pager lg -10
	l2 = !git lg -20
	la = !git lg --all
	last = log -n 1
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	prune-all = !git remote | xargs -n 1 git remote prune $1
	q = !git add -A && git commit -m \"quick commit\"
	st = status
	standup = "!git lg --since yesterday --committer \"$(git config user.name)\" --all"
	undo = reset HEAD^
	update = commit --amend --no-edit
[core]
	pager = less -FXRS -x4
	editor = atom -w
	excludesfile = /Users/logan.brown/.gitignore_global
	filemode = false
	autocrlf = input
[difftool]
	prompt = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[column]
	ui = auto
